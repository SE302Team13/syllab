<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="900.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainFrame.view.MainViewController">
   <top>
      <MenuBar prefHeight="38.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" onAction="#gofile" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#gocreatesyllabus" text="Create a new Syllabus" />
                  <MenuItem mnemonicParsing="false" onAction="#gogetsyllabus" text="Get Syllabus from Internet" />
                  <MenuItem mnemonicParsing="false" onAction="#goopen" text="Open" />
                  <Menu mnemonicParsing="false" onAction="#goopenrecent" text="Open Recent">
                    <items>
                      <MenuItem mnemonicParsing="false" text="CE350.syb" />
                        <MenuItem mnemonicParsing="false" text="SE302.syb" />
                    </items>
                  </Menu>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#goexit" text="Exit                              ALT+F4" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" onAction="#gohelp" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#goabout" text="About" />
                  <MenuItem mnemonicParsing="false" onAction="#gohelpfile" text="Help File" />
                  <MenuItem mnemonicParsing="false" onAction="#gogithubrepository" text="GitHub Repository" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
